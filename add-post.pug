extends ./dashboard
block main
  h1(class="mb-10 text-3xl font-semibold text-gray-900") Add new post
  form#add-post-form(class="w-full")
    .form-row
      .form-group
        +label("Title")
        +input()(placeholder="Enter your title" name="title" )
      .form-group
        +label("Slug")
        +input()(placeholder="Enter your slug" name="slug")
    .form-row
      .form-group
        +label("Image")
        +input()(placeholder="Enter your image URL" name="image" )
      .form-group
        +label("Slug")
        +textarea()(placeholder="Enter your description" name="description" )
    +button("Add new post")(class="block mx-auto w-fit")
block scripts
  script(type="module", src="/scripts/add-post.js")