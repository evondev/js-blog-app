mixin input(name, placeholder)
  input(class="w-full h-12 p-4 border border-gray-300 rounded-md outline-none")&attributes(attributes)
mixin textarea(name, placeholder)
  textarea(class="w-full h-32 p-4 border border-gray-300 rounded-md outline-none resize-none")&attributes(attributes)
mixin label(text)
  label(class="text-sm font-medium text-gray-900") #{text}
mixin button(text)
  button(class="px-6 py-3 text-sm font-medium text-white bg-blue-500 rounded-md")&attributes(attributes) #{text}
mixin checkbox(text)
  label(class="flex items-center gap-2 cursor-pointer")
    input(type="radio" class="w-5 h-5 border border-gray-200")&attributes(attributes)
    span= text

doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Document
    link(rel="preconnect", href="https://fonts.googleapis.com")
    link(rel="preconnect", href="https://fonts.gstatic.com", crossorigin)
    link(href="https://fonts.googleapis.com/css2?family=DM+Sans:wght@400;500;700&display=swap", rel="stylesheet")
    link(href="https://cdn.quilljs.com/1.3.6/quill.snow.css", rel="stylesheet")
    link(href="https://cdn.quilljs.com/1.3.6/quill.bubble.css",
    rel="stylesheet")
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/11.7.0/styles/default.min.css")
    link(href="https://cdnjs.cloudflare.com/ajax/libs/highlight.js/monokai-sublime.min.css", rel="stylesheet")
    link(rel="stylesheet", href="./dracula.css")
    link(rel="stylesheet", href="./style.css")
